@using GiftOfGivers.Client.Helpers

<div class="@GetSeparatorClasses()" @attributes="AdditionalAttributes"></div>

@code {
    [Parameter] public string Orientation { get; set; } = "horizontal";
    [Parameter] public string? Class { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetSeparatorClasses()
    {
        var baseClasses = "shrink-0 bg-border";
        var orientationClasses = Orientation == "horizontal" ? "h-[1px] w-full" : "h-full w-[1px]";
        return Utils.Cn(baseClasses, orientationClasses, Class);
    }
}